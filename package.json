{
  "name": "tics-github-plugin",
  "version": "1.0.0",
  "description": "The TiCS Github action integrates TiCS Client analysis to measure your code quality. The incorporated Quality gating feature enables you to analyze and decorate pull requests.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write src/**/*.ts",
    "format-check": "prettier --check src/**/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build",
    "test": "jest",
    "test-coverage": "jest --coverage --collectCoverageFrom='src/**'",
    "all": "npm run build && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tiobe/tics-github-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "TIOBE",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tiobe/tics-github-action/issues"
  },
  "homepage": "https://github.com/tiobe/tics-github-action#readme",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.1.1",
    "@actions/http-client": "^2.0.1",
    "canonical-path": "^1.0.0",
    "markdown-table": "^3.0.3",
    "underscore": "^1.13.6"
  },
  "devDependencies": {
    "@types/jest": "^27.5.2",
    "@types/node": "^18.11.9",
    "@types/underscore": "^1.11.4",
    "@typescript-eslint/parser": "^5.45.0",
    "@vercel/ncc": "^0.31.1",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^27.5.1",
    "jest-mock": "^29.3.1",
    "prettier": "2.5.1",
    "ts-jest": "^27.1.2",
    "typescript": "^4.9.3"
  }
}
